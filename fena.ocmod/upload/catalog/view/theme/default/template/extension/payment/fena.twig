<input type="radio" value="{{ payment_fena_title }}" checked> 
<img width="30px" class="payment-icon" src="image/payment/panasia/bank-images/fena-logo.svg" alt="Pay by bank">
 {{ payment_fena_title }}
<p>{{ payment_fena_description }}</p>

<!-- HTML code -->
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
  </div>
</div>
<script type="text/javascript">
$('#button-confirm').on('click', function() {
    $.ajax({
        url: 'index.php?route=extension/payment/fena/callback',
        type: 'post',
        data: '',
		beforeSend: function() {
			$('#button-confirm').button('loading');
		},
		success: function(json) {
            
             window.location.href = json;
		
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});
</script> 


